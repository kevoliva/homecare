{% extends 'proprietaire_base.html.twig' %}

{% block title %}
Biens
{% endblock %}
{% block rubriques %}
{% endblock %}
{% block rubriques2 %}
{% endblock %}


{% block contenu %}

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <center>
        <h2>{{app.user.prenom}}, veuillez sélectionner un de vos biens</h2>
        <br>

      </center>
    </div>
  </div>
  <div class="row">

    <div class="col-md-12">

      <table class="table">
        <thead>
          <tr>
            <th>Adresse</th>
            <th>Ville</th>
            <th>CodePostal</th>
            <th><i class="demo-icon icon-eye" style="color:#000000"></i></th>
          </tr>
        </thead>
        <tbody>
          {% for bien in biens %}
          <tr>

            <td>{{ bien.adresse }}</td>
            <td>{{ bien.ville }}</td>
            <td>{{ bien.codePostal }}</td>

            <td>
              <a href="{{ path('homecare_my', {'idBien': bien.id}) }}"><i class="demo-icon icon-eye" style="color:#999999"></i></a>
            </td>
          </tr>
          {% else %}
          <tr>
            <td colspan="7">Vous n'avez enregistré aucun bien pour le moment...</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>

      <a href="{{ path('bien_new') }}" style="float:right;">
        <i class="demo-icon icon-plus-circled" style="font-size:35px; color:#138496"></i>
      </a>

    </div>
  </div>
</div>

{% endblock %}
